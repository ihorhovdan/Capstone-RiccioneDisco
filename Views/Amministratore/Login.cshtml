<link rel="stylesheet" href="~/css/loginRegister/loginRegister.css" asp-append-version="true" />



@{
    ViewData["Title"] = "Amministratore";
}


<div style="margin-top: 150px;">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6 mx-auto">
            <div class="login-panel">
                <h2 class=" text-center mb-4 mt-5" ">Login Amministratore</h2>
                <form asp-action="Login" method="post" class="form-login">
                    <div class="mb-3">
                        <input id="email" name="email" type="email" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <input id="password" name="password" type="password" class="form-control" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn custom-btn btn-accendi ms-auto mb-5">Accedi</button>

                </form>
                @if (ViewData["ErroreLogin"] != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @ViewData["ErroreLogin"]
                    </div>
                }
            </div>
        </div>
    </div>
</div>

