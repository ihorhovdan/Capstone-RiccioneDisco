<script>
    AOS.init();


    const words = ["PARTIRE", "DIVERTIRSI", "FESTEGGIARE"];
    const colors = ["red-text", "blue-text", "green-text"];
    let currentIndex = 0;

    function updateText() {
        currentIndex = (currentIndex + 1) % words.length; // Cicla attraverso gli indici degli array
        const flipText = document.getElementById('flip-text');
        flipText.style.animation = 'none';
        flipText.offsetHeight; // Trigger reflow
        flipText.style.animation = ''; // Reset animation
        flipText.textContent = words[currentIndex];
        flipText.className = ''; // Rimuovi tutte le classi precedenti
        flipText.classList.add(colors[currentIndex]); // Aggiungi la nuova classe di colore
    }

    setInterval(updateText, 1500); // Cambia il testo e il colore ogni 2 secondi
</script>














